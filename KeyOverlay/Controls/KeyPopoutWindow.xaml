<Window x:Class="KeyOverlay.Controls.KeyPopoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyOverlay.Controls"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Title="KeyPopoutWindow" AllowsTransparency="True" WindowStyle="None"
        MouseLeftButtonDown="DragWindow">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Add Key" Click="AddKey_Click"/>
            <MenuItem Header="Close" Click="Close_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
</Window>
